
= simple_form_for(@checklist) do |f|
  = f.error_notification
  .form-inputs
    = f.input :title
    = f.input :description
    
  %table.table
    %thead
      %tr
        %th Actions
        %th Question Title
        %th Question Description
        
    %tbody.fields
      = f.simple_fields_for :questions do |builder|
        = render 'question', f: builder
        
  .form-actions
    = f.button :submit
    = link_to_add_row('Add Question', f, :questions, class: 'btn btn-primary')    
    
    
    
    
    
    
